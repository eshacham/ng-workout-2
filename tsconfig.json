{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*",
    // this does not work so the file needs to be manualy deleted from the libs folder
    // ".node_modules/json-typescript-mapper/libs/utils.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts",
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
